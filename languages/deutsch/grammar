#regular
brennen -> brannte
kennen -> kannte
nennen -> nannte
rennen -> rannte
senden -> sandte
wenden -> wandte
--
bringen -> brachte
denken -> dachte
mögen -> mochte
wissen -> wusste

###present (subjunctive)
befehlen -> befiehlt
empfehlen -> empfiehlt
geschehen -> geschieht
lesen -> liest
sehen -> sieht
stehlen -> stiehlt
--
brechen -> bricht
erschrecken -> erschrickt
essen -> isst
fressen -> frisst
geben -> gibt
gelten -> gilt
helfen -> hilft
messen -> misst
*nehmen -> nimmt
schwellen -> schwillt
sprechen -> spricht
stechen -> sticht
sterben -> stirbt
treffen -> trifft
treten -> tritt
verbergen -> verbirg
verderben -> verdirb
vergessen -> vergisst
werben -> wirbt
werden -> wird
werfen -> wirft
stossen -> stösst
--
dürfen -> 1+3 darf
können -> 1+3 kann
mögen -> 1+3 mag (möchte)
müssen -> 1+3 muss
sollen -> 1+3 soll
wissen -> 1+3 weiss (wüsste)
wollen -> 1+3 will
#a->ä all except schaffen
